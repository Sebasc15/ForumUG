<div class="container p-2">
    <div class="row">
        {{#each Clases }}
            <div class="col-md-3 mt-3">
                <div class="card text-center">
                    <div class="card-header text-center">
                    <h3>{{Nombre_Clase}}</h3>
                </div>
                    <div class="card-body">
                        <p class="m-2">Actividad: {{Nombre_Actividad}}</p>
                        <p class="m-2">Profesor: {{NombreP}} {{PrimerAP}} {{SegundoAP}}</p>
                        <p class="m-2">Locacion: {{Locacion}}</p>
                        <p class="m-2">Fecha: {{Fecha}}</p>
                        <p class="m-2">Horario: {{Horario}}</p>
                        <p class="m-2">Cupo: {{Cupo}} personas</p>
                        <p class="m-2">Descripcion: {{Descripcion}}</p>
                        <form action="/MisActividades/{{ID_Clase}}" method="POST">
                            <div class="d-grid gap-2">
                                <button class="btn btn-danger">
                                    Eliminar registro
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto  align-self-center">
                <div class="card text-center">
                    <div class="card-body">
                        <p>No estas registrado en ninguna clase </p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>