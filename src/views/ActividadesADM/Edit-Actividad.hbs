<div class="container p-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Editar Actividad</h3>
                </div>
                <div class="card-body">
                    <form action="/Actividades/edit/{{Actividad.ID_Actividad}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="mb-3">
                            <input type="text" value="{{Actividad.Nombre_Actividad}}" name="Nombre_Actividad" class="form-control" placeholder="Actividad" autofocus>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>