<div class="container p-2">
    <div class="row">
        <div class="col-md-4 mx-auto  align-self-center">
            <div class="card text-center">
                <div class="card-header text-center" style="background-color: rgb(160, 147, 95);">
                    {{#each Titulo }}
                        <h3>{{Name}}</h3>
                    {{/each}}
                </div>
                <div class="card-body">
                    <h4 style="padding-bottom: 7px; border-bottom-width: 2px; border-bottom-style: solid;">
                        Alumnos registrados en la clase
                    </h4>
                    {{#each Estudiantes }}
                        <p style="font-size: 15px; text-align: justify;" >NUA: {{NUA}} &nbsp;&nbsp;&nbsp;Alumno: {{Nombre}} {{Primer_Apellido}} {{Segundo_Apellido}}</p>
                        
                    {{else}}
                        <div class="col-md-4 mx-auto">
                            <div class="card text-center">
                                <div class="card-body">
                                    <p class="m-2">No hay registrados en esta clase</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>